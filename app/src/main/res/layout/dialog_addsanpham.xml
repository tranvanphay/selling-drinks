<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/backgroundtrangchu"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/khung_et_login"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#d2495054"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/robotocondensedregular"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Thêm sản phẩm"
                android:textColor="#e3e8ea"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivCloseDialogThemSanPham"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/close_icon" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imv_themAnhSanPham"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_selecte_image" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <EditText
                android:id="@+id/edt_maSanPham"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/et_loai"
                android:fontFamily="@font/robotocondensedregular"
                android:hint="Nhập mã sản phẩm"
                android:padding="10dp" />

            <EditText
                android:id="@+id/edt_tenSanPham"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/et_loai"
                android:fontFamily="@font/robotocondensedregular"
                android:hint="Nhập tên sản phẩm"
                android:maxLines="1"
                android:padding="10dp" />
            <Spinner
                android:id="@+id/spnMaLoai"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="#33858eb4"
                android:fontFamily="@font/robotocondensedregular"
                android:padding="10dp" />

            <EditText
                android:id="@+id/edt_chuThich"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/et_loai"
                android:fontFamily="@font/robotocondensedregular"
                android:hint="Nhập chú thích"
                android:padding="10dp" />

            <EditText
                android:id="@+id/edt_giaSanPham"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:inputType="number"
                android:background="@drawable/et_loai"
                android:fontFamily="@font/robotocondensedregular"
                android:hint="Nhập giá tiền"
                android:padding="10dp" />


            <Button
                android:id="@+id/bt_themSanPham"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_themloai"
                android:fontFamily="@font/robotocondensedregular"
                android:text="Thêm"
                android:textColor="#e3e8ea"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>